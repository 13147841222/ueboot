package ${repositoryPackageName};

import ${entityPackageName}.${entityFullName};
import com.ueboot.core.repository.BaseRepository;
import org.springframework.data.jpa.repository.Modifying;
import org.springframework.data.jpa.repository.Query;
import org.springframework.stereotype.Repository;

/**
* TODO——TODO数据持久化
* 规范要求：凡是使用Spring Data JPA语法进行对象数据持久化在此类进行编写
*
* @author ${USER}
*/
@Repository
public interface ${entityName}Repository extends BaseRepository<${entityFullName}, Long>,${entityName}BaseRepository {

      /**
      * 根据主键ID 更新状态有效性
      *
      * @param deleted 有效性状态
      * @param id    主键ID
      * @return 本次操作数量
      */
      @Modifying
      @Query("update ${entityFullName} u set u.deleted = ?1 where u.id = ?2")
      int setDeletedBy(Boolean deleted, Long id);
}
