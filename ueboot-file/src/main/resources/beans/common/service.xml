<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!-- 文件上传服务支持类 -->
	<bean name="fileUploadService" class="com.ueboot.file.service.impl.FileUploadServiceImpl">
		<property name="fileType">
			<list>
				<value>zip</value>
				<value>pdf</value>
				<value>jpg</value>
				<value>png</value>
				<value>jpeg</value>
				<value>db</value>
			</list>
		</property>
		<property name="fileMaxSizes" ref="fileMaxSizesMap" />
		<property name="fileContentTypes" ref="fileContentTypesMap" />
		<property name="allowNamedFileTypesMap" ref="allowNamedFileTypesMap" />
		<property name="uploadFileBasePath" value="${file.upload.uploadFileBasePath}"/>
		<property name="uploadNamedFileBasePath" value="${file.upload.uploadNamedFileBasePath}"/>
		<property name="zipFileBasePath" value="${file.upload.basePath}"></property>
		<property name="hexChars" value="${file.upload.hexChars}"/>
	</bean>
	<bean id="fileMaxSizesMap" class="java.util.HashMap">
		<constructor-arg>
			<map>
				<!-- 10M -->
				<entry key="pdf" value="10485760" />
				<!-- 3M -->
				<entry key="jpg" value="3145728" />
				<entry key="png" value="3145728" />
				<entry key="jpeg" value="3145728" />
				<entry key="pdf" value="3145728" />
				<entry key="zip" value="16777216" />
				<entry key="db" value="20971520" />
			</map>
		</constructor-arg>
	</bean>
	<bean id="fileContentTypesMap" class="java.util.HashMap">
		<constructor-arg>
			<map>
			    <entry key="pdf" value="application/pdf" />
			    <entry key="jpg" value="application/jpg" />
			    <entry key="png" value="application/png" />
			    <entry key="jpeg" value="application/jpeg" />
			    <entry key="zip" value="application/zip" />
			    <entry key="db" value="application/sqlite" />
			</map>
		</constructor-arg>
	</bean>
	<!-- 允许自定义文件名的文件类型 -->
	<bean id="allowNamedFileTypesMap" class="java.util.HashMap">
		<constructor-arg>
			<map>
			   <entry key="db" value="db" />
			</map>
		</constructor-arg>
	</bean>
	
</beans>
